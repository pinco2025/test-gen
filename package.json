{
  "name": "test-gen-engine",
  "version": "1.0.0",
  "description": "JEE Test Generation Engine with Electron, React, and LaTeX support",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:dev:simple": "vite & sleep 5 && electron .",
    "electron:build": "vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "dist": "electron-builder --publish never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "test-generation",
    "latex"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^21.0.0",
    "@supabase/supabase-js": "^2.45.0",
    "better-sqlite3": "^9.2.2",
    "googleapis": "^168.0.0",
    "katex": "^0.16.9",
    "mime-types": "^3.0.2",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-simple-code-editor": "^0.14.1",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "react-window-infinite-loader": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/katex": "^0.16.7",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20.10.6",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^6.5.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.15",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.testgen.app",
    "productName": "Test Generator",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "oauth-credentials.json",
      "config.json"
    ],
    "extraResources": [
      {
        "from": "oauth-credentials.json",
        "to": "oauth-credentials.json",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "config.json",
        "to": "config.json",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.education",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/logo.png",
      "target": [
        "AppImage"
      ],
      "category": "Education"
    }
  }
}
